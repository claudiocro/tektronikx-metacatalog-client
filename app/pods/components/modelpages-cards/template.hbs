{{#each row in grid}}
  <div class="row">
    {{#each rm in row}}
      <div class="col s12 m12 l6">
        <div class="card">
          <div class="card-image">
            <img src="{{rm.pageUrl}}" title="{{rm.year}}"/>
          </div>
          <div class="card-content">
            <span class="card-title grey-text text-darken-4">
              {{rm.year}} / {{rm.modelpage.pagespan}}
            </span>
            <p class="card-bottom-actions">
              {{#link-to 'modelhit.page.edit' rm.modelpage.model rm.modelpage}}<i class="mdi-content-create">Edit</i>{{/link-to}} |
              <a href="{{rm.pageUrl}}" target="_blank"><i class="mdi-content-archive">Download</i></a>
            </p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/each}}
