{{yield}}
<div class="page-header">
  <h1>Login</h1>
</div>
<div class="row">
  {{! login form; the fields must be named "identification" and "password"; the controller action is "authenticate" }}
  <form {{action 'authenticate' on='submit'}} class="col s12">
    <div class="row">
      {{md-input name='identification' value=identification label="Login" classNames="col s12"}}
    </div>
    <div class="row">
      {{md-input name='password' type='password' value=password label="Password" classNames="col s12"}}
    </div>
    <div class="row">
      <div class="col s12">
        <button type="submit" class="btn btn-default">Login</button> or {{#link-to 'register'}} Register{{/link-to}}
      </div>
    </div>
  </form>
  {{#if errorMessage}}
    <div class="alert alert-danger">
      <strong>Login failed:</strong>{{errorMessage}}
    </div>
  {{/if}}
</div>