<section>
  <div class="container">
    <div class="page-header">
      <h2>User Registration</h2>
    </div>
    <div class="row">
      <form {{action 'createUser' model on='submit' }} class="col s12">
        <div class="row">
          {{md-input name='firstName' value=model.firstName label="Name" classNames="col s12"}}
        </div>
        <div class="row">
          {{md-input name='name' value=model.lastName label="Last Name" classNames="col s12"}}
        </div>
        <div class="row">
          {{md-input name='email' type='email' value=model.email label="Email" classNames="col s12"}}
        </div>
        <div class="row">
          {{md-input name='password' type='password' value=model.password label="Password" classNames="col s12"}}
        </div>
        <div class="row">
          <div class="col s12">
            <button type="submit" class="btn btn-default">Register</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

